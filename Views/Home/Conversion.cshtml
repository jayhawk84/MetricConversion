@model MetricConversion.Models.ConversionEntries
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <title>Conversion</title>
</head>
<body>
    <h5 class="bg-primary text-white text-center m-2 p-2">Enter some values below:</h5>
    <form asp-action="Conversion" method="post" class="m-2">
        <div class=" form-group">
            <label asp-for="Miles">Enter miles:</label>
            <input asp-for="Miles" class="form-control" />
        </div>
        <div class=" form-group">
            <label asp-for="Kilometers">Enter kilometers:</label>
            <input asp-for="Kilometers" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Submit Values</button>
    </form>
</body>
</html>